@using ExpenseManager.Entity.Enums
@using ExpenseManager.Resources.CategoryResources
@model IEnumerable<ExpenseManager.Web.Models.Category.CategoryModel>

@{
    ViewBag.Title = CategoryResource.CategoriesManagement;
}

<p>
    @Html.ActionLink(SharedResource.CreateNew, "Create",null,new {@class="btn btn-action"})
</p>
<div class="medium-margin-top">
    @if (Model.Count() != 0)
    {
        <ul class="nav nav-tabs nav-justified" role="tablist" id="categoriesTab">
            <li class="active"><a href="#income" role="tab" data-toggle="tab" id="incomesTab">@CategoryResource.Incomes</a></li>
            <li><a href="#expense" role="tab" data-toggle="tab">@CategoryResource.Expenses</a></li>
            <li><a href="#incomeandexpense" role="tab" data-toggle="tab">@CategoryResource.IncomesAndExpenses</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade in active table-responsive" id="income">
                <table class="table-condensed table table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Icon)
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var category in Model)
                    {
                        if (category.Type == CategoryType.Income)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => category.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => category.Description)
                                </td>
                                <td>
                                    <span class="glyphicon @category.Icon" data-toggle="tooltip" data-placement="top" title="@category.Name"></span>
                                </td>
                                <td>
                                    @if (category.EditPossible)
                                    {
                                        <div class="dropdown">
                                            <a href="#" class="dropdown-toggle btn btn-primary" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@SharedResource.Action <span class="caret"></span></a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    @Html.ActionLink(SharedResource.Edit, "Edit", new {Guid = category.Guid})
                                                </li>
                                                <li>
                                                    @Html.ActionLink(SharedResource.Delete, "Delete", new {id = category.Guid})
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <div class="tab-pane fade table-responsive" id="expense">
                <table class="table-condensed table table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Icon)
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var category in Model)
                    {
                        if (category.Type == CategoryType.Expense)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => category.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => category.Description)
                                </td>
                                <td>
                                    <span class="glyphicon @category.Icon" data-toggle="tooltip" data-placement="top" title="@category.Name"></span>
                                </td>
                                <td>
                                    @if (category.EditPossible)
                                    {
                                        <div class="dropdown">
                                            <a href="#" class="dropdown-toggle btn btn-primary" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@SharedResource.Action <span class="caret"></span></a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    @Html.ActionLink(SharedResource.Edit, "Edit", new {Guid = category.Guid})
                                                </li>
                                                <li>
                                                    @Html.ActionLink(SharedResource.Delete, "Delete", new {id = category.Guid})
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <div class="tab-pane fade table-responsive" id="incomeandexpense">
                <table class="table-condensed table table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Icon)
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var category in Model)
                    {
                        if (category.Type == CategoryType.IncomeAndExpense)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => category.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => category.Description)
                                </td>
                                <td>
                                    <span class="glyphicon @category.Icon" data-toggle="tooltip" data-placement="top" title="@category.Name"></span>
                                </td>
                                <td>
                                    @if (category.EditPossible)
                                    {
                                        <div class="dropdown">
                                            <a href="#" class="dropdown-toggle btn btn-primary" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@SharedResource.Action <span class="caret"></span></a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    @Html.ActionLink(SharedResource.Edit, "Edit", new {Guid = category.Guid})
                                                </li>
                                                <li>
                                                    @Html.ActionLink(SharedResource.Delete, "Delete", new {id = category.Guid})
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $(function () {

                $('#incomesTab').tab('show');

    });
</script>
