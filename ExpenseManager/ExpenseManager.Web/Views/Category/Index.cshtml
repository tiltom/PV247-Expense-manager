@model IEnumerable<ExpenseManager.Web.Models.Category.CategoryShowModel>

@{
    ViewBag.Title = "Categories Management";
}

<p>
    @Html.ActionLink("Create new", "Create",null,new {@class="btn btn-action"})
</p>
<div class="medium-margin-top" /> 
@if (Model.Count() != 0)
{
    <table class="table-condensed table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icon)
            </th>
            <th></th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => category.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => category.Description)
                </td>
                <td>
                    @Html.DisplayFor(m => category.Type)
                </td>
                <td>
                    <span class="glyphicon @category.Icon"></span>
                </td>
                <td>
                    <div class="dropdown">
                        <a href="#" class="dropdown-toggle btn btn-primary" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Action <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Edit", "Edit", new { Guid = category.Guid }) 
                            </li>
                            <li>
                                @Html.ActionLink("Delete", "Delete", new { Guid = category.Guid }, new { onclick = "return confirm('Are you sure you wish to delete this category?');" })
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No categories</p>
}