@model IEnumerable< ExpenseManager.Web.Models.Category.CategoryShowModel>

@{
    ViewBag.Title = "Categories";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create new category", "Create")
</p>

@if (Model.Count() != 0)
{
    <table>
        <tr>
            <td style="width:200px">
                <h4 class="title">Name</h4>
            </td>
            <td style="width: 400px">
                <h4 class="title">Description</h4>
            </td>
            <td style="width: 100px">
                <h4 class="title">Icon</h4>
            </td>
            <td style="width: 100px"></td>
            <td style="width:100px"></td>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <td style="width:200px">
                    <h4 class="title">@category.Name</h4>
                </td>
                <td style="width: 400px">
                    <h4 class="title">@category.Description</h4>
                </td>
                <td style="width: 100px">
                    <span class="glyphicon @category.Icon"></span>
                </td>
                <td style="width: 100px">
                    @Html.ActionLink("Edit", "Edit", new {Guid = category.Guid})
                </td>
                <td style="width: 100px">
                    @Html.ActionLink("Delete", "Delete", new { Guid = category.Guid }, new { onclick = "return confirm('Are you sure you wish to delete this category?');" })
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No categories</p>
}