@using ExpenseManager.Entity
@model IEnumerable<ExpenseManager.Web.Models.BudgetAccessRight.ShowBudgetAccessRightModel>

@{
    ViewBag.Title = "Budget Access Right Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create", new {id = Model.ElementAt(0).BudgetId}, new {@class = "btn btn-action"})
</p>
<div class="medium-margin-top" /> 
<table class="table table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Permission)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedUserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Permission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedUserName)
            </td>
            <td>
                @if (!PermissionEnum.Owner.ToString().Equals(item.Permission.ToString()))
                {
                    <div class="dropdown">
                        <a href="#" class="dropdown-toggle btn btn-primary" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Action <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                            </li>
                            <li>
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id, budgetId = item.BudgetId }, new { onclick = "return confirm('Are you sure you wish to delete this permission?');" })
                            </li>
                        </ul>
                    </div>
                }
            </td>
        </tr>
    }

</table>

