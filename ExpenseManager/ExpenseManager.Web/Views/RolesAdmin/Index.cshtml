@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles management";
}

<p>
    @Html.ActionLink("Create New", "Create",null, new {@class="btn btn-action"})
</p>
<div class="medium-margin-top"> 
<table class="table table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle btn btn-primary" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Action <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </li>
                        <li>
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </li>
                        <li>
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }

</table>
</div>