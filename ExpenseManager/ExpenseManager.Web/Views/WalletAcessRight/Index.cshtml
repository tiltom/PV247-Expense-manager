@using ExpenseManager.Entity
@model IEnumerable<ExpenseManager.Web.Models.WalletAcessRight.WalletAcessRightModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Permission)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedUserId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Permission)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignedUserName)
        </td>
        <td>
            @if (!PermissionEnum.Owner.ToString().Equals(item.Permission))
            {
            @Html.ActionLink("Edit", "Edit", new {id = item.Id})
            @:|
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            }
        </td>
    </tr>
}

</table>
