@model ExpenseManager.Web.Models.WalletAccessRight.WalletAccessRightModel

@{
    ViewBag.Title = "Edit Wallet Access Right";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.WalletId)

        <div class="form-group">
            @Html.LabelFor(model => model.Permission, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Permission, Model.Permissions, "Select Permission", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Permission, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AssignedUserId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AssignedUserId, Model.Users, "Select User", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AssignedUserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success"/>
                @Html.ActionLink("Back to List", "Index",null,new {@class="btn btn-danger"})
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
